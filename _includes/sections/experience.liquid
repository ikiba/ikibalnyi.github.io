{% assign headline = include.headline | default: "Work Experience" %}

{% capture includeContent %}
{% for job in include.experience %}
<article class="entity job">
    <div class="entity-logo">
        {% if job.logo %}
            <img src="{{ "assets/img/" | relative_url | append: job.logo }}" alt="{{ job.company }}" />
        {% else %}
            <img src="{{ "assets/img/" | relative_url | append: 'no-image.png' }}" alt="{{ job.company }}" />
        {% endif %}
    </div>
    <div class="entity-details">
        <div class="entity-summary-info">
            <h3 class="entity-position">{{ job.position }}</h3>
            <h4 class="entity-name">{% if job.url %}<a href="{{ job.url }}">{{ job.company }}</a>{% else %}{{ job.company }}{% endif %}</h4>
            <div class="entity-duration">
                <span>{{ job.startDate | date: "%b %Y" }} - {{ job.endDate | date: "%b %Y" }}</span>
                {% if job.duration %}
                    <span class="bullet">{{ job.duration }}</span>
                {% endif %}
            </div>
        </div>
        <div class="entity-description">
            {% for paragraph in job.description %}<p>{{ paragraph }}</p>{% endfor %}
        </div>
    </div>
</article>
{% endfor %}
{% endcapture %}

{%- include section.liquid title=headline content=includeContent %}
